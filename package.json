{
  "name": "sdef-reader",
  "version": "1.1.0",
  "type": "module",
  "main": "dist/bundle.cjs",
  "scripts": {
    "build": "tsc && node esbuild.config.js",
    "pack": "npm install && npm run build && npx @anthropic-ai/mcpb pack .",
    "cc-install": "npm run build && claude mcp add sdef-reader -- node $(pwd)/dist/bundle.cjs",
    "cc-uninstall": "claude mcp remove sdef-reader"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "fast-xml-parser": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.0"
  }
}
